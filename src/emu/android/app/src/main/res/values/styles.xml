<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spinnerColor">@color/dark_color_spinner</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spinnerColor">@color/light_color_spinner</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/AppTheme.OverflowMenu</item>
        <item name="textAppearancePopupMenuHeader">@style/PopupMenuTextAppearanceHeader</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearanceSmall</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
    </style>

    <style name="AppTheme.OverflowMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/dark_color_primary_dark</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="PopupMenuTextAppearanceHeader" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header">
        <item name="android:textColor">@color/dark_color_text_primary</item>
    </style>

    <style name="PopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/dark_color_text_primary</item>
    </style>

    <style name="PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/dark_color_text_primary</item>
    </style>

    <style name="AppTheme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FilePickerTheme" parent="NNF_BaseTheme">
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_color_primary_dark</item>
        <item name="colorAccent">@color/file_picker_accent</item>
        <item name="android:colorBackground">@color/dark_color_background</item>
        <item name="android:windowBackground">@color/dark_color_background</item>
        <item name="colorBackgroundFloating">@color/dark_color_background</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/file_picker_accent</item>
    </style>

    <style name="FilePickerTheme.Light" parent="NNF_BaseTheme.Light">
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryDark">@color/light_color_primary_dark</item>
        <item name="colorAccent">@color/file_picker_accent</item>
        <item name="android:colorBackground">@color/light_color_background</item>
        <item name="android:windowBackground">@color/light_color_background</item>
        <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme.Light</item>
    </style>

    <style name="FilePickerAlertDialogTheme.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/file_picker_accent</item>
    </style>

</resources>